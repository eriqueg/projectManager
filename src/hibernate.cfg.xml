<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">
			jdbc:postgresql://localhost:5432/gestao_projetos
		</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">admin</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>

		<mapping class="br.edu.unisep.model.vo.UsuarioVO" />
		<mapping class="br.edu.unisep.model.vo.ClienteVO" />
		<mapping class="br.edu.unisep.model.vo.ProjetoVO" />

		<mapping class="br.edu.unisep.model.vo.TarefaVO" />
		<mapping class="br.edu.unisep.model.vo.MembroEquipeVO" />

	</session-factory>
</hibernate-configuration>
